{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "The Mental Edge V2",
    "author": "Your Name",
    "version": "0.1.0",
    "minimum-overwolf-version": "0.188.0",
    "description": "A companion app to combat tilt and reinforce good habits.",
    "icon": "icons/icon.png",
    "icon_gray": "icons/icon_gray.png"
  },
  "permissions": [
    "GameInfo",
    "Hotkeys"
  ],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "index.html",
        "is_background_page": true,
        "background_optimization": true
      },
      "in_game": {
        "file": "index.html",
        "in_game_only": true,
        "transparent": true,
        "resizable": false,
        "size": {
          "width": 400,
          "height": 500
        }
      }
    },
    "hotkeys": {
      "toggle_ingame_window": {
        "title": "Show/Hide Mental Edge",
        "action-type": "toggle",
        "default": "Ctrl+F1"
      }
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [ 5426 ]
        },
        "start_minimized": true
      }
    ],
    "game_events": [ 5426 ]
  }
}